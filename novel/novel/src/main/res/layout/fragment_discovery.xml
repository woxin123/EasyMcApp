<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="top.mcwebsite.novel.ui.discovery.DiscoveryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:context=".ui.discovery.DiscoveryFragment">

        <ImageView
            android:id="@+id/back"
            android:layout_width="34dp"
            android:layout_height="24dp"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:scaleType="fitCenter"
            android:onClick="@{() -> viewModel.back()}"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_content"
            app:layout_constraintBottom_toBottomOf="@id/search_content"
            android:contentDescription="@null"
            app:tint="@color/black"
            android:visibility="@{viewModel.backVisibleState ? View.VISIBLE : View.GONE}"/>

        <EditText
            android:id="@+id/search_content"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/bg_search_content"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawableTint="@color/black"
            android:gravity="center_vertical|start"
            android:text="@={viewModel.searchContent}"
            android:hint="@string/search_hint"
            android:inputType="text"
            android:paddingStart="3dp"
            android:paddingEnd="0dp"
            android:textSize="15sp"
            android:lines="1"
            android:imeOptions="actionSearch"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintEnd_toStartOf="@id/search_btn"
            app:layout_constraintTop_toTopOf="parent"
             />

        <TextView
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:layout_marginStart="10dp"
            android:visibility="@{viewModel.searchBtnVisibleState ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toEndOf="@id/search_content"
            app:layout_constraintTop_toTopOf="@id/search_content"
            app:layout_constraintBottom_toBottomOf="@id/search_content"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>