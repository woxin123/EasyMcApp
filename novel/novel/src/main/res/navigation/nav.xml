<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="top.mcwebsite.novel.ui.home.NovelHomeFragment"
        android:label="Main"
        app:defaultNavHost="true"
        tools:layout="@layout/fragment_novel_home">

        <action
            android:id="@+id/action_mainFragment_to_bookShelfFragment"
            app:destination="@id/bookShelfFragment" />
        <action
            android:id="@+id/action_mainFragment_to_discoveryFragment"
            app:destination="@id/discoveryFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookShelfFragment"
        android:name="top.mcwebsite.novel.ui.bookshelf.BookShelfFragment"
        android:label="fragment_book_shelf"
        tools:layout="@layout/fragment_book_shelf" />
    <fragment
        android:id="@+id/discoveryFragment"
        android:name="top.mcwebsite.novel.ui.discovery.DiscoveryFragment"
        android:label="fragment_discovery"
        tools:layout="@layout/fragment_discovery" />

</navigation>